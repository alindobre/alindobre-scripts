HOST_MIRROR=http://mirrors.kernel.org/ubuntu
HOST_MIRROR=http://uk.archive.ubuntu.com/ubuntu
DEBOOTSTRAP_DIR=$HOST/tmp/debootstrap

rm -rf $HOST
mkdir -pv $HOST

git clone git://anonscm.debian.org/d-i/debootstrap.git $DEBOOTSTRAP_DIR
make -C $DEBOOTSTRAP_DIR
$DEBOOTSTRAP_DIR/debootstrap --variant=buildd --include=wget,gawk trusty $HOST $HOST_MIRROR
